

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Products</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">DataTables</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">

            <div class="card">
              <div class="card-header">
                <h3 class="card-title">DataTable with default features</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                  <thead>
                  <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Qty</th>
                    <th>Options</th>
                  </tr>
                  </thead>
                  <tbody>
                    {{#each products}}
                    <tr>
                      <td>{{productName}}</td>
                      <td>{{productPrice}}</td>
                      <td>{{productQty}}</td>
                      <td>
                        <a href="/admin-panel/product/edit/{{_id}}" type="button" class="btn btn-info"><i class="fas fa-edit"></i></a>
                        <form action="/admin-panel/product/show?_method=DELETE" method="POST" class="d-inline-block" id="myForm">
                          <button type="submit" class="btn btn-danger" id="deleteBtn"><i class="fas fa-times"></i></button>
                        </form>

                      </td>
                    </tr>
                    {{/each}}
                  </tbody>
                  <tfoot>
                  <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Qty</th>
                    <th>Options</th>
                  </tr>
                  </tfoot>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
<script>
  var submitLink = document.getElementById('deleteBtn'),
    myForm = document.getElementById('myForm');

  submitLink.addEventListener('click', function(e) {
      if (confirm('Are You Sure?')) {
          myForm.submit();
      }else{
        e.preventDefault();
      }
  });
</script>
{{>admin/scripts}}
{{>admin/tableScripts}}