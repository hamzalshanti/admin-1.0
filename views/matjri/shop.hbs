<div class="product-big-title-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="product-bit-title text-center">
                    <h2>Shop</h2>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="single-product-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            {{#each products}}
            {{!-- col --}}
            <div class="col-md-3 col-sm-6">
                <div class="single-shop-product">
                    <div class="product-upper">
                        <img src="{{mainImage}}" alt="">
                    </div>
                    <h2><a href="/single-product/{{product._id}}">{{name}}</a></h2>
                    <div class="stars-outer">
                        <div class="stars-inner" style="width: {{getRatingWidth product.rateAverage }};">
                        </div>
                    </div>
                    <div class="product-carousel-price">
                        <ins>{{../currencySymbol}}<span
                                class="format-number">{{discount product.price product.discount}}</span></ins>
                        <del>{{../currencySymbol}}<span class="format-number">{{product.price}}</span></del>
                    </div>

                    <div class="product-option-shop">
                        <a class="add_to_cart_button" data-quantity="1" data-product_sku="" data-product_id="70"
                            rel="nofollow" href="/add-to-cart/{{product._id}}" data-id="">Add to cart</a>
                    </div>
                </div>
            </div>
            {{!-- /col --}}
            {{/each}}
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="product-pagination text-center">
                    <nav>
                        <ul class="pagination">
                            <li>
                                <a href="#" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>

                            <li>
                                <a href="#" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<input type="hidden" id="total_pages" value="{{totalPages}}">
<input type="hidden" id="page" value="{{page}}">