<div class="product-big-title-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="product-bit-title text-center">
                    <h2>Shop</h2>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="single-product-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            {{#each products}}
            {{!-- col --}}
            <div class="col-md-3 col-sm-6">
                <div class="single-shop-product">
                    <div class="product-upper">
                        <img src="/products/{{mainImage}}" alt="">
                    </div>
                    <h2><a href="/single-product/{{_id}}">{{productName}}</a></h2>
                    <div class="stars-outer">
                        <div class="stars-inner" style="width: {{getRatingWidth rateAverage }};">
                        </div>
                    </div>
                    <div class="product-carousel-price">
                        <ins>${{discount productPrice discount}}</ins> <del>${{productPrice}}</del>
                    </div>

                    <div class="product-option-shop">
                        <a class="add_to_cart_button" data-quantity="1" data-product_sku="" data-product_id="70"
                            rel="nofollow" href="/canvas/shop/?add-to-cart=70">Add to cart</a>
                    </div>
                </div>
            </div>
            {{!-- /col --}}
            {{/each}}
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="product-pagination text-center">
                    <nav>
                        <ul class="pagination">
                            <li>
                                <a href="#" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>

                            <li>
                                <a href="#" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    const totalPages = {{ totalPages }},
    currnetPage = {{ page }};
    for (let i = 0; i < totalPages; ++i) {
        const list = document.createElement('li'),
            link = document.createElement('a');
        link.setAttribute('href', `?page=${i + 1}`);
        link.textContent = i + 1;
        list.appendChild(link);
        document.querySelector('.pagination').appendChild(list);
    }
</script>